@using ProductManagementSystem.Models;
@{
    ViewBag.Title = "SlectedProducts";
    Layout = "~/Views/Shared/_InnerCustomerLayout.cshtml";
}

<h2>SlectedProducts</h2>

@model List<SelectedProduct>

<!-- Your view code to display the selected products -->
<table>
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.Quantity</td>
            </tr>
        }
    </tbody>
</table>
